@model Post

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">@Model.Title</h1>
            <div class="tags">
                @foreach(var tag in Model.Tags){
                    <a href="/posts/tag/@tag.Url" class="badge bg-@tag.TagColor bg-opacity-10 text-@tag.TagColor mb-2 fw-bold">@tag.Text</a>

                }
            </div>
            <img src="~/img/@Model.Image" class="img-fluid rounded " alt="Post Image">
            <div>
                @Html.Raw(@Model.Content)
            </div>
        </div>
        
        <div class="bg-white mt-3">
            <div class="card border-0">
                <div class="card-header pb-0">
                    <h4><span id="commentCount">@Model.Comments.Count</span> adet yorum.</h4>
                </div>
                <div class="card-body">
                    <div id="comments">
                        @foreach(var comment in Model.Comments){
                            <div class="my-4 d-flex">
                                <img src="~/img/@comment.User.Image" alt="" class="avatar rounded-circle fload-start me-3">
                                <div>
                                    <div class="mb-2 d-flex">
                                        <h6 class="me-2">@comment.User.Name</h6>
                                        <small>@comment.PublishedOn.ToString("G")</small>
                                    </div>
                                    <p>@comment.Text</p>
                                </div>
                            </div>

                        }
                    </div>

                    <hr class="my-4"/>
                    @if(User.Identity!.IsAuthenticated){
                        <div>
                            <h4 class="mb-3">Yorum Ekle </h4>
                            <form action="/posts/AddComment">
                                <input type="hidden" id="PostId" name="PostId" value="@Model.PostId">
                                <div class="mb-3">
                                    <label for="Text" class="form-label">Yorum</label>
                                    <textarea type="text" name="Text" id="Text" rows="3" class="form-control"></textarea>
                                </div>

                                <div class="mb-3">
                                    <button id="btnYorumKayit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </form>
                        </div>
                    }else{
                        <p>Yorum için uygulmaya giriş yapmalısınız. <a href="/users/login">Login</a></p>
                    }
                    
                </div>
            </div>
        </div>
    </div>
    

    <div class="col-lg-4">

        @await Component.InvokeAsync("TagsMenu")

        @await Component.InvokeAsync("NewPosts")

        
    </div>
</div>

@section Script{
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function(){
        $("#btnYorumKayit").click(function(){
            $.ajax({
                type:"POST",
                url: '@Url.Action("AddComment")',
                dataType:"json",
                data:{
                    PostId: $("#PostId").val(),
                    Text: $("#Text").val(),
                },
                success:function(yorum){
                    var date = new Date(yorum.publishedOn)
                    console.log(yorum)
                    $("#comments").append(`
                        <div class="my-4 d-flex">
                                <img src="/img/${yorum.avatar}" alt="" class="avatar rounded-circle fload-start me-3">
                                <div>
                                    <div class="mb-2 d-flex">
                                        <h6 class="me-2">${yorum.userName}</h6>
                                        <small>${date.toLocaleDateString()}("G")</small>
                                    </div>
                                    <p>${yorum.text}</p>
                                </div>
                            </div>
                    `);
                
                    $("#Name").val("");
                    $("#Text").val("");
                    var adet = parseInt($("#commentCount").text());
                    $("#commentCount").text(adet+1) 
                }
            });
            return false;
        });
    });
  </script>
}