@model Product
@{
    ViewData["Title"] = "Create";
}
<h1>@ViewData["Title"]</h1>

<form asp-controller="Home" asp-action="Create" method="POST" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Fiyat" class="form-label"></label>
        <input asp-for="Fiyat" type="text" class="form-control"/>
        <span asp-validation-for="Fiyat"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Image" class="form-label"></label>
        <input type="file" name="imageFile" id="imageFile" class="form-control">
        <span asp-validation-for="Image"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
            <option value="0">Hepsi</option>
        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsActive" type="checkbox" class="form-check-input" >
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>