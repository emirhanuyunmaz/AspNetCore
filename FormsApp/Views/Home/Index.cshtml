@model ProductViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="mb-3">
    <form asp-action="Index" method="get">
        <div class="">
           <div class="row">
                <div class="col-md-11">
                    <select class="form-select" name="category" asp-items='@(new SelectList(Model.Categories,"CategoryId","Name",Model.SelectedCategory))' >
                        <option value="0">Hepsi</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary">Filtrele</button>
                </div>
           </div>
        </div>
    </form>
</div>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Products[0].ProductId)</th>
            <th >@Html.DisplayNameFor(m => m.Products[0].Image)</th>
            <th>@Html.DisplayNameFor(m => m.Products[0].Name)</th>
            <th>@Html.DisplayNameFor(m => m.Products[0].Fiyat)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var prd in @Model.Products){
            <tr>
                <td>@prd.ProductId</td>
                <td style="width: 100px;height: 100px ;">
                    <img class="img-fluid" src="~/img/@prd.Image" alt="">
                </td>
                <td>@prd.Name</td>
                <td>@prd.Fiyat</td>
                <td>
                    <a href="/Home/Edit/@prd.ProductId" class="btn btn-sm btn-primary">Edit</a>
                    <a href="/Home/delete/@prd.ProductId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>