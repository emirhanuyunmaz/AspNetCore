@model IEnumerable<AppRole>

<a  asp-action="Create" class="btn btn-primary" >Create Role</a>
<hr>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Kullanicilar</th>
            <th></th>
        </tr>
    </thead>

    @if(Model.Count() == 0){
        <tr><td colspan="4" class="text-center">Role Yok</td></tr>
    }else{

    <tbody>
        @foreach(var role in Model){
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td asp-role-users="@role.Id"></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm">Edit</a>
                    <form action="Delete" method="post">
                        <input type="hidden" name="id" value="@role.Id">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    }
</table>