@model List<UserInfo>
@{
    ViewBag.Title = "Toplantıya katılım Listesi ";
}
<main class="text-center">
    <h1 class="h4">Toplantıya katılım Listesi </h1>
    <table class="table table-borderd">
        <thead>
            <tr>
                <td>Ad</td>
                @* <td>Email</td> *@
                @* <td>Telefon</td> *@
                <td>Katılım Durumu</td>
                <td></td>
            </tr>
        </thead>

        <tbody>
            @{int i=0;}
            @foreach(var user in Model){
                var durum = user.WillAttend == true ? "Evet" : "Hayır";
                var className = user.WillAttend == true ? "table-success" : "table-danger";
                if(user.WillAttend == true){
                    i++;
                }
                <tr class="@className">
                    <td>@user.Name</td>
                    @* <td>emir@gmail.com </td> *@
                    <td>@durum</td>
                    <td>
                        <a class="btn btn-sm btn-primay" href="/meeting/details/@user.Id">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="card">
        <div class="card-body">
            <span>
                Katılımcı sayısı :@i
            </span>
        </div>
    </div>
</main>