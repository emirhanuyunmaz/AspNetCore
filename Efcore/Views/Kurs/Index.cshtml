@model IEnumerable<Kurs>
@{
    ViewData["Title"] = "Kurs List Page";
}
<h2>Kurs Listesi</h2>
<a href="/Kurs/Create" class="btn btn-primary">Kurs Ekle</a>
<hr/>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.KursId)</th>
            <th>@Html.DisplayNameFor(m => m.Baslik)</th>
            <th style="width: 120px;"></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach(var item in Model){
 
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KursId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Baslik)

                </td>
                <td >
                    <a asp-controller="Kurs" asp-action="Edit" asp-route-id="@item.KursId" class="btn btn-sm btn-primary mb-1 ">Details</a>
                    <a asp-controller="Kurs" asp-action="Delete" asp-route-id="@item.KursId" class="btn btn-sm btn-danger ">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>